<div class="row">
        <div class="col-md-2">
             <%= link_to 'Continuar Agregando', root_path, class: 'btn btn-dark' %>
        </div>
        <div class="col-md-2 offset-md-8">
            <%= link_to 'Vaciar tareas', empty_card_orders_path, class: 'btn btn-danger', method: :delete %>
        </div>
        <div class="col-md-2 offset-md-8">
            <%= link_to 'Crear Tareas', new_work_path, class: 'btn btn-success' %>
        </div>

        
    </div>

<% if@orders.present? %>

<table class="table table-hover">
	<tr>
		<th>
			Tarea
		</th>
		<th>
			Tarea Completada 
		</th>
		
		<th>
			Cantidad de Tareas
		</th>
		
	</tr>
	<% @orders.each do |order| %>
	<tr>
		<td>
			<%= order.work.name %>
		</td>
		<td>
			<%= order.listo %>
		</td>
		
		<td>
			<%= order.quantity %>
		</td>
		<td>
			 $<%= order.quantity * order.work.valor %>
		</td>

		<td>
			<%= link_to order_path(order), class: "btn btn-danger btn-sm", method: :delete do %><i class="fas fa-trash-alt"></i>
			<% end %>
		</td>

		
		
	</tr>
	<% end %>
	<tr>
    <th>Total de Tareas</th>
    <th>
        <%= @total %>
    </th>
    <th>
    </th>
    
	
</tr>

</table>
<% else %>
<h5>No se agregaron Tareas </h5>
<%end %>

